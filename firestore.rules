
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: This rule is insecure and should only be used for development.
    // It allows anyone to read and write to your entire database.
    // Before deploying to production, you must secure your data.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
