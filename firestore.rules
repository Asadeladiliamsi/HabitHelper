rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan Terbuka untuk Pengembangan
    // MENGIZINKAN SEMUA PENGGUNA YANG SUDAH LOGIN UNTUK MEMBACA DAN MENULIS SEMUA DATA.
    // PERINGATAN: JANGAN GUNAKAN ATURAN INI DI LINGKUNGAN PRODUKSI.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
