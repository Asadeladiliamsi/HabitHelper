rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan untuk koleksi users
    match /users/{userId} {
      // Izinkan siapa saja untuk membuat dokumen pengguna baru saat mendaftar.
      allow create;

      // Izinkan pengguna untuk membaca dokumen mereka sendiri.
      // Izinkan admin untuk membaca dokumen pengguna mana pun.
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Izinkan admin untuk menulis/memperbarui peran pengguna mana pun.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Izinkan admin untuk mendaftar (list) semua pengguna.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Izinkan pengguna yang terautentikasi (guru/admin) untuk membaca/menulis data siswa.
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }
  }
}
